<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textViewPos"
        android:gravity="left"
        android:layout_width="15dp"
        android:textSize="13sp"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:paddingLeft="3dp"
        android:id="@+id/textViewEquipo"
        android:gravity="left"
        android:layout_width="125dp"
        android:textSize="13sp"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/textViewPT"
        android:gravity="center"
        android:layout_width="@dimen/campo_port"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/textViewPJ"
        android:gravity="center"
        android:layout_width="@dimen/campo_port"
        android:textSize="13sp"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/textViewPG"
        android:gravity="center"
        android:layout_width="@dimen/campo_port"
        android:textSize="13sp"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/textViewPE"
        android:gravity="center"
        android:layout_width="@dimen/campo_port"
        android:textSize="13sp"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/textViewPP"
        android:gravity="center"
        android:layout_width="@dimen/campo_port"
        android:textSize="13sp"
        android:layout_height="wrap_content"
       >
    </TextView>
    <TextView
        android:id="@+id/textViewGF"
        android:gravity="center"
        android:layout_width="@dimen/campo_port"
        android:textSize="13sp"
        android:layout_height="wrap_content"
        >
    </TextView>
    <TextView
        android:id="@+id/textViewGC"
        android:gravity="center"
        android:layout_width="@dimen/campo_port"
        android:textSize="13sp"
        android:layout_height="wrap_content"
        >
    </TextView>
</LinearLayout>
